<!DOCTYPE html>
<html>
<head>
	<title></title>

	<% include head %>

	<script type="text/javascript">
		
		$(document).ready(function(){
			if ($('.error h3').html() != ""){
				$('.error').addClass('animate');
			}
		});

	</script>
</head>
<body>

	<% include navbar %>

	<div class="container">
		<div class="row">
			<div class="text-danger col-sm-12 text-center">
				<form class="form-area" action="/registerProcess" method="post">
					<div class="col-sm-12 text-danger text-center error">
						<h3><%= message %></h3>
					</div>
					<div class="col-sm-12">
						<input type="text" name="name" placeholder="Enter your name" />
					</div>
					<div class="col-sm-12">
						<input type="email" name="email" placeholder="Enter your email" />
					</div>
					<div class="col-sm-12">
						<input type="password" name="password" placeholder="Enter your password" />
					</div>
					<div class="submit-btn col-sm-12">
						<button class="btn btn-success" type="submit">Register</button>
					</div>
				</form>
			</div>
		</div>
	</div>

</body>
</html>