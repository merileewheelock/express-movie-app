<!DOCTYPE html>
<html>
<head>
	<title>Movie Database</title>

	<% include head %>

</head>
<body>

	<% include navbar %>

	<div class="container">

		<div class="row header-section">
			<div class="text-danger col-sm-12 text-center">
				<h1><%= titleHeader%></h1>
			</div>

			<div class="col-sm-6 col-sm-offset-3">
				<form id="search-form" class="form-inline" action="/search" method="post">
					<input type="text" placeholder="Movie Title" name="searchString"/>
					<button type="submit" class="btn btn-default">Search</button>
				</form>
			</div>
		</div>

		<div class="row">
			<div class="col-sm-12 movies">
				
				<% for(let i = 0; i < movieData.length; i++) { %>
					<div class="col-sm-6 movie-card">
						<a href="/movie/<%= movieData[i].id %>">
							<div class="col-sm-12 text-center card-title"><h3><%=movieData[i].title%></h3></div>
							<div class="main-imgs">
								<img src="<%= imageBaseUrl + movieData[i].poster_path %>" />
							</div>
							<div class="col-sm-6 col-sm-offset-6 movie-text">
								<%= movieData[i].overview %>
							</div>
						</a>
					</div>
				<% } %>
			</div>
		</div>
	</div>

</body>
</html>